<div class="modal fade" id="modal_edit_location">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">แก้ไขพื้นที่</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form method="POST" action="/edit_location" id="form_edit_location">
          <div class="form-group">
            <input type="hidden" name="location_id" id="e_location_id" value="" />
            <select class="form-control custom-select select-user" id="select_user">
              <option value="default">เลือกผู้ใช้งาน</option>
            </select>
            <label for="location_name">ชื่อ</label>
            <input type="text" class="form-control" id="e_location_name" name="location_name" placeholder="ชื่อพื้นที่" />
          </div>
          <div class="form-group">
            <label for="location_name">หมายเลข</label>
            <input type="text" class="form-control" id="e_location_number" name="location_number" />
          </div>
          <div class="form-group">
            <label for="location_editress">ที่อยู่</label>
            <textarea type="input" class="form-control" id="e_location_address" name="location_address" rows="5" cols="80" value="-">-</textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer justify-content-between">
        <button type="button" class="btn btn-default" data-dismiss="modal">ปิด</button>
        <button type="button" for="form_edit_location" class="btn btn-primary btn-save-location">เซฟ</button>
      </div>
    </div>
  </div>
</div>