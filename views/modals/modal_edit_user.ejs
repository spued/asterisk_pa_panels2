<div class="modal fade" id="modal_edit_user">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">จัดการผู้ใช้งาน</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="form_edit_user">
          <div class="row mb-2">
            <div class="col-md-4">
              <div class="form-group">
                <label for="e_logo">โลโก้</label>
                <img src="/public/img/mylogo.png" class="img" style="width:100px; height:100px;" id="e_logo"></img>
              </div>
            </div>
            <div class="col-md-8">
              <div class="form-group">

                <div class="row mb-2">
                  <div class="col-sm-8">
                    <input class="form-control file" id="imgfile" type="file" name="imgfile" accept="image/*">
                  </div>
                  <div class="col-sm-4">
                    <input type="button" class="form-control btn btn-info btn-logo-upload btn-float-right" style="width:100px;" value="Upload"></input>
                  </div>
                </div>

              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="e_name">ชื่อ</label>
                <input type="text" class="form-control" id="e_name" disabled>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="e_email">อีเมล์</label>
                <input type="text" class="form-control" id="e_email">
              </div>
            </div>
            <div class="col-md-12">
              <div class="form-group">
                <label for="e_message">ข้อความ</label>
                <input type="text" class="form-control" id="e_message">
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-group">
                <label for="e_password_1">รหัสผ่าน</label>
                <input type="password" class="form-control" id="e_password_1" placeholder="ตั้งรหัสผ่าน">
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="e_password_2">ทบทวนรหัสผ่าน</label>
                <input type="password" class="form-control" id="e_password_2" placeholder="ตั้งรหัสผ่านให้เหมือนกัน">
              </div>
            </div>

            <div class="col-md-4">
              <div class="form-group">
                <label for="e_type">เบอร์นำ</label>
                <input type="text" class="form-control" id="e_prefix">
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <label for="e_type">ชนิด</label>
                <select class="form-control select" id="e_type">
                  <option value="user">User</option>
                  <option value="sub_admin">Sub-Admin</option>
                  <option value="admin">Admin</option>
                </select>
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <label for="e_status">สถานะ</label>
                <select class="form-control select" id="e_status">
                  <option value="disable">Disable</option>
                  <option value="enable">Enable</option>
                </select>
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-group">
                <label for="e_sip_account">SIP account</label>
                <input type="text" class="form-control" id="e_sip_account">
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="sip_password">SIP password</label>
                <input type="text" class="form-control" id="e_sip_password">
              </div>
            </div>
            <div class="col-md-12">
              <div class="form-group">
                <label for="api_key">API Key</label>
                <input type="text" class="form-control" id="e_api_key">
              </div>
            </div>
          </div>
        </form>

      </div>
      <div class="modal-footer justify-content-between">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-success" form="form_edit_user">Save</button>
      </div>
    </div>
  </div>
</div>